<!DOCTYPE HTML>
<html>
    <head>
        <title>Toko Buku</title>
        <link rel="stylesheet" type="text/css" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css">
    </head>
    
    <body>
        <div class="container">
            <div class="jumbotron">
                <a class="btn btn-success btn-lg" href="buku/new">Tambah Buku</a>
            </div>
            
            <!--   Template buku akan kita buat dibawah ini       -->
            <div class="row text-center" style="display: flex; flex-wrap: wrap;">
            <% arrayBuku.forEach(function(buku){ %>
                <div class="col-md-3 col-sm-6">
                    <div class="thumbnail">
                        <img src="<%=buku.urlGambar%>">
                        <div class="caption">
                            <h4><%=buku.judul%></h4>
                        </div>
                        
                        <a class="btn btn-primary" href="/buku/<%= buku._id %>">Detail</a>
                    </div>
                </div>
            <% }); %>
            </div>
            
        </div>
    </body>
</html>